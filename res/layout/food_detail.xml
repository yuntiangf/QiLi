<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/food_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/qiezi"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/food_tip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:text="ddd"
            />
        <TextView 
            android:id="@+id/food_tip"
            android:textColor="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/list_line"
        />
    
    <LinearLayout 
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/food_ingredent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:text="ddd"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="主   料："
                />
            <TextView 
               android:id="@+id/food_main_ingredent"
               android:textColor="#000000"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
            />
           
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="辅   料："
                />
            <TextView 
               android:id="@+id/food_other_ingredent"
               android:textColor="#000000"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
            />
        </LinearLayout>
         
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/list_line"
        />
        
    <LinearLayout 
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/food_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:text="ddd"
            />
        <TextView 
            android:id="@+id/food_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/list_line"
        />
    <TextView 
        android:id="@+id/progress_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"/>
    <ListView 
        android:id="@+id/progress_listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"></ListView>
</LinearLayout>